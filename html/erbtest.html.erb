
<style>
* {
  margin: 0;
  padding: 0;
}
.container {
}
.colordiv {
  float: left;
  display:flex;
  align-items:center;
  justify-content:center;
  margin: 10px;
  border: 3px solid black;
  border-radius: 10px;
  padding: 10px;
  height: 15%;
  width: 10%;

}
p {
  text-align: center;
}


</style>

<div class="container">
  <% colors.each do |color,hex|%>
    <div class="colordiv" style="background:<%= color%>;">
      <% if hex.chars.select.with_index {|x,i| i.odd?}.any?{|x| x =~ /[A-F]/}%>
        <p style="color:black;"><%= color%> <p>
      <%else%>
        <p style="color:white;"> <%=color%> <p>
      <%end%>
    </div>
  <% end %>
</div>
